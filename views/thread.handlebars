<div class="specific-thread card">
	<div class="specific-thread-block card-body text-center p-3">
		<h3 data-id="{{thread.id}}" class="thread-name mt-3">{{thread.title}}</h3>
		<p class="thread-body mt-3" >{{thread.text_body}}</p>
		<h4 class="signature mt-3">Threaded By: {{thread.user.username}}</h4> 
		<h4 class="signature mt-2">{{format_date thread.date_created}} @ {{format_time thread.createdAt}}</h4>
		{{#if isThreadAuthor}}
		<div class="d-flex justify-content-center mt-3 mb-3">
			<a href="/threads/{{thread.id}}/edit"><button id="editThread" class="btn edit-button" type="button">EDIT</button></a>
			<button id="deleteThread" class="btn delete-button ml-2" type="button">DELETE</button>
		</div>
		{{/if}}
	</div>
</div>
<div class="comments card">
	<div class="comment-body card-body text-center">
        {{#each comments as |comment|}}
        {{>comment-details}}
			{{#if comment.isCommentAuthor}}
				<div class="d-flex justify-content-center mt-3 mb-3">
					<button id="editComment-{{comment.id}}" class="btn edit-button edit-comment" type="button">EDIT</button>
					<button id="comment-{{comment.id}}" class="btn delete-button delete-comment ml-2" type="button">DELETE</button>
				</div>
				{{#if comment.isCommentAuthor}}
				<script src="../js/deleteComment.js"></script>
				<script src="../js/editComment.js"></script>
				{{/if}}
			{{/if}}
        {{/each}}
    </div>
</div>
<div class="add-comment card">
	<div class="comment-form card-body">
		<form class="form formAddComment">
			<div class="form-group mt-3">
				<label for="commentBody"></label>
				<input type="text" placeholder="Add Comment" id="commentBody">
			</div>
			<div class="form-group mt-3 mb-3">
				<button class="btn submit-button" type="submit">SUBMIT</button>
			</div>
		</form>
	</div>
</div>

<script src="../js/createComment.js"></script>
{{#if isThreadAuthor}}
<script src="../js/deleteThread.js"></script>
{{/if}}